mixin footer()
	+b.FOOTER.footer
		.container
			.row
				.col
					+e.title: span Меню
					- var nav= {"Кратко о нас и 52 отзыва":"#header-block","Эти заболевания лечи чаще всего":"#s-look","Как 60 минут спасут вашу жизнь ":"#s-60-min","Есть 5 причин обратиться к нам ":"#","Наши услуги ":"#" ,"Страшные диагнозы, которых никогда небыло(реальные истории) ":"#" ,"Наши опытные маммологи ":"#" ,"Видео самообследования груди ":"#" ,"Карта проезда в нашу клинику ":"#s-contact" } 
					+e.UL.nav
						each linkPatch, linkName in nav
							+e.LI.item: +e.A.link(href= linkPatch)= linkName


				.col-xl-3.col-sm-auto
					+e.title: span Контакты
					+e.tel(href="tel:(057)781-01-11") (057) 781-01-11
